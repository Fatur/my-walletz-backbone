@using MyWalletz.Helpers
<div id="account-list-page" class="page">
  <h2 class="page-header">Accounts</h2>
  <div class="data-grid">
    <table class="table table-striped table-bordered">
      <thead>
        <tr class="data-grid-header">
          <th data-attribute="title">Title</th>
          <th data-attribute="type">Type</th>
          <th data-attribute="balance">Balance</th>
          <th class="data-grid-unsortable"></th>
        </tr>
      </thead>
      <tbody class="data-grid-content"></tbody>
    </table>
  </div>
  <div class="form-actions">
    <a href="@Url.ClientUrl("accounts", "new")" class="btn btn-primary">
      <i class="icon-plus icon-white"></i> Create new
    </a>
  </div>
  <script id="account-grid-row-template" type="text/html">
    <td>{{title}}</td>
    <td>{{type}}</td>
    <td>{{formattedBalance()}}</td>
    <td>
      <div class="btn-group">
        <a
          href="javascript:;"
          class="btn dropdown-toggle"
          data-toggle="dropdown">
          Action <span class="caret"></span>
        </a>
        <ul class="dropdown-menu" role="menu">
          <li>
            <a 
              href="@Url.ClientUrl("accounts", "{{id}}", "edit")">
              <i class="icon-edit"></i> Edit
            </a>
          </li>
          <li>
            <a
              href="javascript:;"
              data-command="delete">
              <i class="icon-trash"></i> Delete
            </a>
          </li>
          <li class="divider"></li>
          <li>
            <a
              href="@Url.ClientUrl(
                "accounts",
                "{{id}}",
                "transactions",
                "new")">
              <i class="icon-plus"></i> New transaction
            </a>
          </li>
        </ul>
      </div>
    </td>
  </script>
</div>