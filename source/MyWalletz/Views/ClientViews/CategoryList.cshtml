@helper TabPane(string id, bool active = false) {
  <div id="@id" class="tab-pane @(active ? "active" : string.Empty)">
    <ol></ol>
    <ul>
      <li>
        <input
          type="text"
          placeholder="New category..."
          title="Type your category title and hit enter" />
      </li>
    </ul>
  </div>
}
<div id="category-list-page" class="page">
  <h2 class="page-header">Categories</h2>
  <div class="tabbable">
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#expense-list" data-toggle="tab">Expense</a>
      </li>
      <li>
        <a href="#income-list" data-toggle="tab">Income</a>
      </li>
    </ul>
    <div class="tab-content">
      @TabPane("expense-list", true)
      @TabPane("income-list")
    </div>
  </div>
  <script id="category-list-item-template" type="text/html">
    <div>
      <div class="display">
        <span class="uneditable-input" title="Double click to edit">
          {{title}}
        </span> 
        <a href="javascript:;" title="Delete" data-command="delete">
          <i class="icon-trash"></i>
        </a>
      </div>
      <div class="edit">
        <input
          type="text"
          value="{{title}}"
          title="Type your category title and hit enter" />
      </div>
    </div>
  </script>
</div>